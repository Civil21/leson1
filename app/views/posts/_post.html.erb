<div class="col-6 post">
  <%= image_tag post.photo, width:300, height:300 %>
  <b>
    <%= link_to post.title, post_path(post) %>
  </b>
  view:
  <%= post.view_count%><br/>
  likes:
  <span class="likes">
    <%= post.likes.size%>
  </span>

  <button type="button" name="button" onclick="like(this,<%=post.id%>)" class="like-button">
    <%= post.likes.find_by_user_id(current_user.id) ? "DesLike" : "Like" %>
  </button>

  <% if post.user_id == current_user.id %>
    <%= link_to "edit", edit_post_path(post) %>
    <%= link_to "delete", post_path(post), method: :delete%>
  <%end%>
<%= link_to post.category.name, category_path(post.category)%>
</div>
