<div class="">
<h1>
  <%= @post.title%>
  <%= link_to "edit", edit_post_path(@post)  if user_signed_in? &&  @post.user_id == current_user.id%>
</h1>
    View: <%= @post.view_count%>
<br/>
   Автор: <%=link_to @post.user.email, user_path(@post.user_id)%><br>
Category: <%=link_to @post.category.name, category_path(@post.category)%>

<%= image_tag @post.photo, width:500, height:300 %>
<p>
<%= @post.body%>
</p>
<div id="images">
  <% @post.images.each do |image|%>
    <%= image_tag image,height:300%>
  <%end%>
</div>
<div id="comments" class="ps-2">
  <%= render "comments/form", object: @post%>
  Коментарі:
  <%=render @comments %>
</div>
</div>
